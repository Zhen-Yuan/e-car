<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="100dp"
    tools:context="com.example.denis.ecar.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.09"
            android:contentDescription="@string/imgLogo"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/txtVwWillkommen"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etMail"
            style="@style/et_style"
            android:hint="@string/hint_mail"
            android:textColor="@color/colorTextPrimary"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/bttnWeiter"
            style="@style/bttnStyle"
            android:text="@string/Weiter" />

        <TextView
            android:id="@+id/txtVwRegistrieren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Registrieren"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"/>

        <Button
            android:id="@+id/bttnFBSignIn"
            style="@style/bttnFBStyle"
            android:layout_marginTop="20dp"
            android:text="@string/bttnFBLogin" />

        <Button
            android:id="@+id/bttnGoogleSignIn"
            style="@style/bttnGoogleStyle"
            android:text="@string/bttnGoogleLogin" />

        <TextView
            android:id="@+id/txtVwAGB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/rechtliches"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

</LinearLayout>